#!/usr/bin/env node

const fs = require('fs-extra')
const path = require('path')
const getHash = require('../lib/get-hash.js')



getHash(process.cwd())
  .then(async data=>{
      try{
          await fs.writeJSON(path.resolve('.vnjson/version.json' ), data, { spaces: 2 } )
          console.log("[+]")
      }
      catch(e){
          console.error(e)
      }
  })


